<% content_for :header do %>
    <% render 'layouts/navbar' %> 
<% end %>
<% content_for :modal do %>
    <!-- Modal -->
    <div id="new-modal" class="modal fade" data-backdrop="true" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"> 
    	<div class="modal-dialog modal-lg">
    	    <!-- Modal content-->
    	    <div class="modal-content">
    		    <div class="modal-header">
    		        <button type="button" class="close" data-dismiss="modal">&times;</button>
    		        <h4 class="modal-title"  id="myModalLabel">New Data</h4>
    		    </div>
    		    <div class="modal-body">
    		        <form id="new-form" onsubmit="event.preventDefault(); newData()">
    			        <div class="form-group">
    			            <%= label_tag :username %>
							<%= text_field_tag :username, nil, class:'form-control', required: true  %>
    			        </div>
    			        <div class="form-group">
    			            <%= label_tag :email %>
							<%= email_field_tag :email, nil, class:'form-control', required: true  %>
    			        </div>
    			        <div class="form-group">
    			        	<div class="row">
    			        		<div class="form-group col-md-6">
		    			            <%= label_tag :password %>
									<%= password_field_tag :password, nil, class:'form-control' %>
								</div>
		    			        <div class="form-group col-md-6">
									<%= label_tag :password_confirmation %>
									<%= password_field_tag :password_confirmation, nil, class:'form-control' %>
		    			        </div>

    			        	</div>
    			        </div>
    			        <button type="submit" class="btn btn-default btn-block">Save</button>
    		        </form>
    		    </div>
    	    </div>
    	</div>
    </div>

    <!-- Modal Edit-->
    <div id="edit-modal" class="modal fade" data-backdrop="true" role="dialog" aria-labelledby="lb-md-edit" aria-hidden="true"> 
    	<div class="modal-dialog modal-lg">
    	    <!-- Modal content-->
    	    <div class="modal-content">
    		    <div class="modal-header">
    		        <button type="button" class="close" data-dismiss="modal">&times;</button>
    		        <h4 class="modal-title"  id="lb-md-edit">Edit Data</h4>
    		    </div>
    		    <div class="modal-body">
    		        <form id="edit-form" onsubmit="event.preventDefault(); updateData()">
    			        <div class="form-group">
    			            <%= label_tag :username %>
							<%= text_field_tag :username, nil, class:'form-control', required: true  %>
    			        </div>
    			        <div class="form-group">
    			            <%= label_tag :email %>
							<%= email_field_tag :email, nil, class:'form-control', required: true  %>
    			        </div>
    			        <div class="form-group">
    			        	<div class="row">
    			        		<div class="form-group col-md-6">
		    			            <%= label_tag :password %>
									<%= password_field_tag :password, nil, class:'form-control'  %>
								</div>
		    			        <div class="form-group col-md-6">
									<%= label_tag :password_confirmation %>
									<%= password_field_tag :password_confirmation, nil, class:'form-control'  %>
		    			        </div>

    			        	</div>
    			        </div>
    			        
    			        <button type="submit" class="btn btn-default btn-block">Save</button>
    		        </form>
    		    </div>
    	    </div>
    	</div>
    </div>
<% end %>

<% content_for :content do %>
   <div class="container">
		<div class="well">
			<h1 class="m-0 p-0">USER LIST</h1>
			<div class="panel panel-default">
			  	<div class="panel-body">
			  		<button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#new-modal">New Data</button>
			  	</div>
			</div>
		</div> 
		

   		<table id="tb-bank" class="table table-striped table-bordered" style="width:100%" >
   			<thead>
   				<tr>
   					<th>Username</th>
   					<th>Email</th>
   					<th>Action</th>
   				</tr>
   			</thead>
   			<tbody>
   				
   			</tbody>
   		</table>
   </div> 
<% end %>

<% content_for :scripts do %>
<script type="text/javascript">
	var dttable = null;
	var _data = null;
	function newData(){
		var data = $('#new-form').serialize();  
		$('#loader').show();
		$.ajax({     
		    type: 'POST',
		    url: "<%= api_users_path %>",
		    data: data,                                                                                  
		    error: function( xhr ){ 
		      	alert(xhr.responseText);
		      	console.log(xhr)
		      	$('#loader').hide();
		    },
		    success: function( data ){ 
		      	$('#loader').hide();
		      	dttable.ajax.reload(null, true);
		      	$('#new-modal').modal('hide');

		    }
		});
	}

	function editData(obj){
		var id = $(obj).data('id');
		var url = $(obj).data('url');
		const getApplicantById = _id => _data.find(({id}) => id === _id);
		filtered = getApplicantById(id);
		populate($('#edit-form'), filtered);
		$('#edit-modal').modal('show');
		$('#edit-form').data('url', "<%= api_users_path %>/"+id);
	}

	function populate(frm, data) {   
	    $.each(data, function(key, value) {  
	        var ctrl = $('[name='+key+']', frm);  
	        switch(ctrl.prop("type")) { 
	            case "radio": case "checkbox":   
	                ctrl.each(function() {
	                    if($(this).attr('value') == value) $(this).attr("checked",value);
	                });   
	                break;  
	            default:
	                ctrl.val(value); 
	        }  
	    });  
	}

	function updateData(){
		var data = $('#edit-form').serialize();  
		var url = $('#edit-form').data('url');  
		$('#loader').show();

		$.ajax({     
		    type: 'PATCH',
		    url: url,
		    data: data,                                                                                  
		    error: function( xhr ){ 
		      	alert(xhr.responseText);
		      	$('#loader').hide();
		    },
		    success: function( data ){ 
		      	$('#loader').hide();
		      	dttable.ajax.reload(null, true);
		      	$('#edit-modal').modal('hide');
		    }
		});
	}

	function deleteData(obj){
		var id = $(obj).data('id');
		var url = $(obj).data('url');
		$('#loader').show();
		var x = confirm("Are you sure you want to delete?");
		if (x)
		    $.ajax({     
		        type: 'DELETE',
		        url: url,
		        data: { "id": id },                                                                                  
		        error: function( xhr ){
		        	$('#loader').hide();
		          	alert(xhr.responseText);
		        },
		        success: function( data ){ 
		        	$('#loader').hide();
		        	 dttable.ajax.reload(null, true);
		        }
		    });
		else
		  	return false; 
		
	}

	$(document).ready( function(){ 
		$(window).keydown(function(event){
		    if(event.keyCode == 13) {
		      	event.preventDefault();
		      	return false;
		    }
		});
		dttable  = $('#tb-bank').DataTable({
		  	responsive: true,
		  	"scrollY": "45vh",
	  	  	"scrollCollapse": true,
		  	"ajax": {
			    "url": "api/users",
			    "dataSrc": function ( json ) {
			        for ( var i=0, ien=json.data.length ; i<ien ; i++ ) {
			        	var id_bank = json.data[i].id; 
			            action = `
			            	<button class="btn btn-sm btn-warning" data-id="`+id_bank+`" data-url="/api/users/`+id_bank+`" onclick="editData(this)">Edit</button>
			            	<button class="btn btn-sm btn-danger" data-id="`+id_bank+`" data-url="/api/users/`+id_bank+`" onclick="deleteData(this)">Delete</button>
			            `;

			            json.data[i].action = action;
			        }
			        _data = json.data;
			        return json.data;
			    },
			},
			"columns": [
	            { "data": "username" },
	            { "data": "email" },
	            { "data": "action" },
	        ]
		});


	});
</script>
<% end %>
<%= render template: "layouts/application" %>